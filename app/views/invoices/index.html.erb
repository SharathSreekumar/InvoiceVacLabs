<p id="notice"><%= notice %></p>

<div class="row" style="margin-top:8%">
  <div class="col-lg-2"></div>
  <div class="col-lg-1 col-temp">
    <div class="jumbotron" style="background-color:#606060; height:354px">
      <button type="button" class="btn btn-transparent col-lg-12" onclick="location.href='/products';"> Products </button>
      <button type="button"  class="btn btn-yellow col-lg-12" onclick="location.href='/invoices';"> Invoices </button>
    </div>
  </div>
  <div class="col-lg-7 col-temp">
    <div class="jumbotron">
      <div class="">
        <div class="row">
          <div class="col-lg-1"></div>
          <div class="col-lg-11">
            <ol class="breadcrumb">
              <li>Invoices</li>
              <li>Invoices List</li>
            </ol>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-1"></div>
          <div class="col-lg-8">
            <form role="search">
              <div class="form-group col-lg-10">
                <input type="text" class="form-control" placeholder="Search by contact details or product names">
              </div>
              <button type="submit" class="btn btn-default col-lg-2">Search</button>
            </form>
          </div>
          <div class="col-lg-3">
            <button type="button" class="btn btn-success" onclick="location.href='/invoices/new';"> + New Invoice </button>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-1"></div>
          <div class="col-lg-10">
            <table class="table">
              <thead>
                <tr>
                  <th>Date</th>
                  <th>Invoice Number</th>
                  <th>Customer</th>
                  <th>Products</th>
                  <th>Total</th>
                </tr>
              </thead>
              <tbody>
              <% @invoices.each do |invoice| %>
                <tr>
                  <td><%= invoice.invoice_date.strftime("%e %B %Y") %></td>
                  <td><%= invoice.invoice %></td>
                  <td><%= invoice.customer_name %></td>
                  <td><%= invoice.product %></td>
                  <td><%= invoice.amount %></td>
                </tr>
              <% end %>
              </tbody>
            </table>
          </div>
          <div class="col-lg-1"></div>
        </div>
        <div class="row">
          <div class="col-lg-8"></div>
          <div class="col-lg-4" style="padding-left:5%">
            <nav>
              <ul class="pagination">
                <li><a href="#" aria-label="Previous"><span aria-hidden="true">&laquo; Prev</span></a></li>
                <li><a href="#" aria-label="Next"><span aria-hidden="true">Next &raquo;</span></a></li>
              </ul>
            </nav>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-lg-2"></div>
</div>
            